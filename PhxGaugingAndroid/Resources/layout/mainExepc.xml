
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Head">
      <!--回退图标-->
      <ImageView
          android:id="@+id/backIco"
          android:layout_width="@dimen/TihltHeight"
          android:layout_height="@dimen/TihltHeight"
          android:layout_centerVertical="true"
          android:textAlignment="center"
          style="@style/Retun_Tools"
          android:background="@drawable/PressColor" />
      <!--回退图标-->
      <!--title-->
      <TextView
          android:id="@+id/wifiText"
          android:textColor="@color/textIcon"
          android:textSize="@dimen/TVTextSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/backIco"
          android:layout_centerVertical="true"
          android:layout_marginLeft="3dp"
          android:text="WIFI未连接" />
      <!--title-->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="@dimen/TihltHeight"
          android:id="@+id/btnDiscover"
          android:gravity="center_vertical"
          android:layout_alignParentRight="true"
          android:background="@drawable/PressColor">
        <ImageView
            android:layout_width="@dimen/ButtonHeight"
            android:layout_height="@dimen/ButtonHeight"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            style="@style/DiscoverBluetooth" />
      </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <FrameLayout
          android:id="@+id/content_frame"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@+id/viewLine1" />
      <View
          android:id="@+id/viewLine1"
          android:layout_marginLeft="0dp"
          style="@style/More_View"
          android:layout_above="@+id/bottom_navigation" />
      <LinearLayout
          android:id="@+id/bottom_navigation"
          android:orientation="horizontal"
          style="@style/Bottom">
        <LinearLayout
            android:id="@+id/tb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="0"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/iv1"
              android:layout_width="@dimen/NavigateWidth"
              android:layout_height="@dimen/NavigateWidth"
              android:src="@drawable/selector_page1" />
          <TextView
              android:id="@+id/tv1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:text="设备"
              android:textColor="@color/colorTextGrey"
              android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="1"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/iv2"
              android:layout_width="@dimen/NavigateWidth"
              android:layout_height="@dimen/NavigateWidth"
              android:src="@drawable/selector_page2" />
          <TextView
              android:id="@+id/tv2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:text="工单"
              android:textColor="@color/colorTextGrey"
              android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="2"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/iv3"
              android:layout_width="@dimen/NavigateWidth"
              android:layout_height="@dimen/NavigateWidth"
              android:src="@drawable/selector_page3" />
          <TextView
              android:id="@+id/tv3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:text="检测"
              android:textColor="@color/colorTextGrey"
              android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="3"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/iv4"
              android:layout_width="@dimen/NavigateWidth"
              android:layout_height="@dimen/NavigateWidth"
              android:src="@drawable/selector_page4" />
          <TextView
              android:id="@+id/tv4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:text="更多"
              android:textColor="@color/colorTextGrey"
              android:textSize="11sp" />
        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>